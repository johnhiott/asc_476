<h1>New applicant</h1>

<%= form_for(@applicant, method: 'create') do |f| %>
  <% if @applicant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@applicant.errors.count, 'error') %> prohibited this applicant from being saved:</h2>

      <ul>
      <% @applicant.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%# TODO: The email suffix get's put on a newline when there are errors %>
    <%= f.text_field :email %> <%= EMAIL_SUFFIX %>
  </div>
  <div class="field">
    <%= f.label :wuid %><br>
    <%= f.text_field :wuid %>
  </div>
  <div class="field">
    <%= f.label :phone_number %><br>
    <%= f.text_field :phone_number %>
  </div>
  <div class="field">
    <%= f.label :class_standing %><br>
    <%= f.text_field :class_standing %>
  </div>
  <div class="field">
    <%= f.label :comment %><br>
    <%= f.text_area :comment %>
  </div>
  <div class="field">
    <%= f.label :major %><br>
    <%= f.text_field :major %>
  </div>
  <div class="field">
    <%= f.label :minor %><br>
    <%= f.text_field :minor %>
  </div>
  <div class="field">
    <%= f.label :work_study %><br>
    <%= f.check_box :work_study %>
  </div>

  <%# TODO: Show one course and available time as soon as the view loads %>
  <%= f.fields_for :available_times do |available_time_fields| %>
    <%= render 'available_time_fields', :f => available_time_fields %>
  <% end %>
  <p><%= link_to_add_fields 'Add Availability', f, :available_times %></p>

  <%= f.fields_for :positions do |position_fields| %>
    <%= render 'position_fields', :f => position_fields %>
  <% end %>
  <p><%= link_to_add_fields 'Add Course', f, :positions %></p>

  <div class="actions">
    <%= f.submit 'Submit Application' %>
  </div>
<% end %>

<%= link_to 'Back', applicants_path %>
