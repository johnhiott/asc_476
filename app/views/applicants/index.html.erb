<h1>Listing applicants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>GPA</th>
      <th>GPA Last Updated</th>
      <th>Work study</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @applicants.each do |applicant| %>
      <tr>
        <td><%= applicant.name %></td>
        <td><%= applicant.email %><%= EMAIL_SUFFIX %></td>
        <td class="data-right"><%= applicant.gpa %></td>
        <% if applicant.gpa %>
          <td class="data-right"><%= applicant.gpa_timestamp.strftime(DATE_FORMAT) %></td>
        <% else %>
          <td class="data-right">Never</td>
        <% end %>
        <td class="data-right"><%= applicant.work_study ? 'Yes' : 'No' %></td>
        <td><%= link_to 'Show', applicant %></td>
        <td><%= link_to 'Edit', edit_applicant_path(applicant) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

