<p>
  <strong>Applicant:</strong>
  <% if logged_in? %>
    <%= link_to(applicant.name, applicant) %>
  <% else %>
    <%= applicant.name %>
  <% end %>
  (<%= mail_to("#{ applicant.email }#{ EMAIL_SUFFIX }") %>)
</p>

<% if course %>
  <p>
    <strong>Course:</strong>
    <%= link_to(course.full_name, reports_path(course_id: [course.id])) %>
  </p>
<% end %>

<p>
  <strong><%= get_possessive(applicant.name) %> comments:</strong>
  <%= applicant.comment %>
</p>

<p>
  <strong>Major:</strong>
  <%= applicant.major %>
</p>

<p>
  <strong>Minor:</strong>
  <%= applicant.minor %>
</p>

<hr>
