<% provide(:title, 'Login') %>
<h1 class="sr-only">Login</h1>

<p id="notice"><%= notice %></p>
<div class="alert">
  <%= alert %>
</div>

<div class="container">
  <%= form_for(:session, url: sessions_path, html: { class: "form-signin"}) do |f| %>
    <h2 class="form-signin-heading">Please sign in</h2>
    <%= f.label :email, class: "sr-only" %><br>
    <%= f.text_field :email, class: "form-control", placeholder: "Email Address" %>
    <%= f.label :password, class: "sr-only" %><br>
    <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
    <%= f.submit "Sign in", class: "btn btn-lg btn-primary btn-block" %>
  <% end %>
</div>
