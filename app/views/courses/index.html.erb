<h1>Listing courses</h1>
<%= link_to "Sign out", signout_path, method: "delete" %>
<br/>

<p id="notice">
  <%= notice %>
</p>

<% @courses.each do |course| %>
  <% if course.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% course.errors.each do |key, value| %>
          <li><%= value %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Designator</th>
      <th>Number</th>
      <th>Hidden</th>
      <th>Disabled</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <%= form_for(course) do |f| %>
        <tr>
          <td><%= course.designator %></td>
          <td><%= course.number %></td>
          <td><%= f.check_box :hidden, class: 'checkable' %></td>
          <td><%= f.check_box :disabled, class: 'checkable' %></td>
          <td><%= link_to 'Edit', edit_course_path(course) %></td>
          <td><%= submit_tag 'Save' %></td>
        </tr>
      <% end %>
      <%# <tr> %>
      <%#   <td><%= course.designator %1></td> %>
      <%#   <td><%= course.number %1></td> %>
      <%#   <td><%= course.hidden? %1></td> %>
      <%#   <td><%= course.disabled? %1></td> %>
      <%#   <td><%= link_to 'Edit', edit_course_path(course) %1></td> %>
      <%# </tr> %>
    <% end %>
  </tbody>
</table>

