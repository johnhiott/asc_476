<!DOCTYPE html>
<html>
<head>
  <title>Asc476</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= nav_bar fixed: :top, brand: 'ASC Tutoring', responsive: true do %>
  <% if logged_in_moderator? %>
    <%= menu_group do %>
      <%= drop_down 'View' do %>
        <%= menu_item 'Applicants', applicants_path %>
        <%= menu_item 'Professors', professors_path %>
        <%= menu_item 'Courses', courses_path %>
      <% end %>
      <%= menu_item 'Reports', filter_reports_path %>
    <% end %>
  <% end %>
  <%= menu_group pull: :right do %>
    <% if logged_in_moderator? %>
      <%= menu_item current_user.email, edit_user_path(current_user) %>
      <%= menu_item 'Log Out', signout_path, method: :delete %>
    <% else %>
      <%= menu_item 'Sign In', signin_path %>
    <% end -%>
  <% end %>
<% end %>

<%= yield %>

<%= debug(params) if Rails.env.development? %>

<script type="text/javascript">
$('table.clickable tbody tr').click(function() {
  window.location = this.id;
});
</script>

</body>
</html>
